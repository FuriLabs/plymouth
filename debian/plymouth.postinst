#!/bin/sh

set -e

case "${1}" in
	configure)
		if [ -z "$(plymouth-set-default-theme || true)" ]
		then
			plymouth-set-default-theme text
		fi

		if [ -x /usr/sbin/update-initramfs ]
		then
			update-initramfs -u
		fi
		;;

	abort-upgrade|abort-remove|abort-deconfigure)

		;;

	*)
		echo "postinst called with unknown argument \`${1}'" >&2
		exit 1
		;;
esac

#DEBHELPER#

exit 0
